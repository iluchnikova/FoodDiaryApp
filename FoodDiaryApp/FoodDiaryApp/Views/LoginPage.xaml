<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FoodDiaryApp.Views.LoginPage">
    <ContentPage.Content>
        <StackLayout Padding="10,0,10,0" VerticalOptions="Center">
            <Entry x:Name="Login" Placeholder="Login"/>
            <Entry x:Name="Password" Placeholder="Password" IsPassword="True"/>
            <Button VerticalOptions="Center" BackgroundColor="DimGray" Text="Login" Clicked="LoginButton_Clicked"/>
            <!--Command="{Binding LoginCommand}"-->
        </StackLayout>
    </ContentPage.Content>
</ContentPage>